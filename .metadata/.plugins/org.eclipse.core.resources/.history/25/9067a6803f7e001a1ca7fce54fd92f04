package AIAC;
import java.util.*;

public class Class {
	protected Promo p;
	protected Filiere f;
	protected	List <Student> l =new ArrayList <>();
//-----------------------------------------------------------------------------------------	
	public Class() {
		System.out.println("vous avez creer la classe indéfinit" );
	}
	public Class(Promo a,Filiere b) {
		p=a ;
		f=b ;
		
		System.out.println("vous avez creer la classe " + f.nomFilière+" "+ p.nPromo );
	}
//-----------------------------------------------------------------------------------------	
	public void addStud (String a, String b) {
		Student s= new Student (a,b);
		l.add(s);
		Collections.sort(l);
		System.out.println("vous avez ajouter l'étudiant "+ s.firstnameStud +" "+ s.lastnameStud+ " à la classe "+ f.nomFilière+" "+p.nPromo);

	}
	public void addStud(Student s) {
		l.add(s);
		Collections.sort(l);
		System.out.println("vous avez ajouter l'étudiant "+ s.firstnameStud +" "+ s.lastnameStud+ " à la classe "+ f.nomFilière+" "+p.nPromo);

	}
	public void afficheClass() {
		System.out.println(p.nPromo + f.nomFilière);
	}
	public void affichestudClass() {
		
		for (int i=0;i<l.size();i++) {
			System.out.println("les éléves de la classe ");
			
			System.out.println( p.nPromo + f.nomFilière + l.get(i).lastnameStud +l.get(i).firstnameStud );
		}
		
	}
}
