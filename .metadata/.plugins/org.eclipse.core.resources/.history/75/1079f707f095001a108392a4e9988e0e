package gestiondesEtudes;

import java.text.ParseException;
import java.util.InputMismatchException;
import java.util.Scanner;

public class InscriptionPédagogique {
		protected int anneePromo;
		//protected Promotion p;
		protected int filierechoisie;
		//protected Student et;
		protected Ecole ec;
		protected Class c;
		InscriptionAdministrative a;
		Scanner sc = new Scanner(System.in);
		
		public InscriptionPédagogique(Ecole ec) {
			this.ec = ec;
			int i=0;
			while(i==0){
			System.out.println("choisir votre filière :");
			ec.affichefiliereEcole();
			try {
				filierechoisie=sc.nextInt();
				sc.nextLine();
				if(0>filierechoisie|| filierechoisie>ec.filiereEcole.size()) {
					throw new InputMismatchException("Ce choix est invalide.");
				}
				
				ec.choisirFiliere(filierechoisie).choisirClassFilere().addStud(a.e);;
				
				break;
				
			}catch(InputMismatchException e) {
				System.out.println();
				System.err.println("Ce choix est invalide");
				sc.nextLine();
				i=0;
				
			}
			catch(NullPointerException e) {
				System.out.println();
				System.err.println("Pas de choix actuellement.");
				sc.nextLine();
				i=0;
			}
			}
		
			System.out.println("Vous vous inscrivez au titre de la :\n 1) Première année\n 2) Deuxième année\n 3) Troisième année");
			a.e.anneePromo = sc.nextInt();
			sc.nextLine();
			gestion();
		}
		
		public void firstYear(Ecole ecole) throws ParseException {
			if (anneePromo == 1) {
				InscriptionAdministrative ia = new InscriptionAdministrative(ecole);
				ec.choisirFiliere(filierechoisie).choisirClassFilere().addStud(et);;
				}
			}
		
		
		public void secondYear() {
			int i = 1;
			int j = 1;
			boolean a= false;
			
					for (Promotion pp : f.Table) {
						if (pp.getAnneePromo() == 1) {
							System.out.println("Choisissez votre nom :");
							pp.listStudent();
							i = sc.nextInt();
							break;
						}
					}
				
						for (Promotion pp : f.Table) {
							if (pp.getAnneePromo() == 1) { 
								p = pp;
								for (Student e : p.Promo) {
									if (j == i) {
										if (e.getDecision().equalsIgnoreCase("Passage")) {
												e.setAnneePromo(2);
												et = e;
												p.deleteStudent(e);
												System.out.println("Félicitations, vos notes et discipline vous ont permis de réussir. \nBienvenu dans cette nouvelle année !");
												System.out.println("\n----------------------\n");
												a = true;
												pp.afficherPromo();
												System.out.println("\n----------------------\n");
												for (Promotion pt : f.Table) {
													if (pt.getAnneePromo() == 2 && a == true) {
														p = pt;
														p.addStudent(et);
														p.afficherPromo();
													}
												}
										}
										else {
												System.out.println("Désolé, vous allez redoubler. Bon courage !");
										}
									}
									else j++;
								}			
							}
						}	
					
				
		}
		
		public void thirdYear() {
			int i = 1;
			int j = 1;
			boolean a= false;
					for (Promotion pp : f.Table) {
						if (pp.getAnneePromo() == 2) {
							System.out.println("Choisissez votre nom :");
							pp.listStudent();
							i = sc.nextInt();
							break;
						}
					}
				
						for (Promotion pp : f.Table) {
							if (pp.getAnneePromo() == 2) {
								for (Student e : pp.Promo) {
									if (j == i) {
										if (e.getDecision().equalsIgnoreCase("Passage")) {
												e.setAnneePromo(3);
												et = e;
												pp.deleteStudent(et);
												System.out.println("Félicitations, vos notes et discipline vous ont permis de réussir. \nBienvenu dans cette nouvelle année !\n");
												a = true;
												System.out.println("\n----------------------\n");
												pp.afficherPromo();
												System.out.println("\n----------------------\n");
												for (Promotion pt : f.Table) {
													if (pt.getAnneePromo() == 3 && a == true) {
														pt.addStudent(et);
														pt.afficherPromo();
													}
												}
										}
										else {
												System.out.println("Désolé, vous allez redoubler. Bon courage !\n");
										}
									}
									else j++;
								}			
							}
						}	
					
		}
		
		public void gestion() {
			switch (anneePromo) {
			case 1 : firstYear(); break;
			case 2 : secondYear(); break;
			case 3 : thirdYear(); break;
			default : System.out.println("Réessayer"); anneePromo = sc.nextInt(); gestion(); break;
			}
		}
	
}
